    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/",
            "args": [
                "server",
                "--port=8080",
                "-s",
                "localhost"
            ]
        },
        {
            "name": "Scheduler",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/",
            "args": [
                "scheduler",
            ]
        },
        {
            "name": "Hello World",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/",
            "args": [
                "start",
                "${workspaceFolder}/examples/hello_world.yaml"
            ]
        }
    ]
}