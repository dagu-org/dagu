{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/",
      "args": ["server", "--port=8080"]
    },
    {
      "name": "Start-All",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/",
      "args": ["start-all", "--port=8080"]
    },
    {
      "name": "Scheduler",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/",
      "args": ["scheduler"]
    },
    {
      "name": "Worker",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/",
      "args": ["worker", "--worker.labels", "xxx:yyy"]
    },
    {
      "name": "Start",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/",
      "args": ["start", "--no-queue", "${input:pathToSpec}"]
    },
    {
      "name": "Retry",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/",
      "args": ["retry", "--run-id=${input:runId}", "${input:pathToSpec}"]
    },
    {
      "name": "Stop",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/",
      "args": ["stop", "${input:pathToSpec}", "--run-id=${input:runId}"]
    },
    {
      "name": "Status",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/",
      "args": ["status", "${input:pathToSpec}"]
    },
    {
      "name": "Enqueue",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/",
      "args": ["enqueue", "${input:pathToSpec}"]
    },
    {
      "name": "Migrate",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/",
      "args": ["migrate", "history"]
    }
  ],
  "inputs": [
    {
      "id": "pathToSpec",
      "type": "promptString",
      "description": "Enter the path to the spec file",
      "default": "${workspaceFolder}/examples/hello_world.yaml"
    },
    {
      "id": "runId",
      "type": "promptString",
      "description": "Enter the run id",
      "default": ""
    }
  ]
}
